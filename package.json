{
  "name": "bas-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @bas-platform/web dev",
    "lint": "yarn workspaces foreach run lint",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "prisma:generate": "yarn workspace @bas-platform/prisma prisma:generate",
    "prisma:seed": "yarn workspace @bas-platform/prisma prisma:sseed"
  }
}